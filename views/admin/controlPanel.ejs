                <% if(userS && userS.firstName){ %>
                    <p class="text-gray-700">Merhaba, <%= userS.firstName %> Kontrol paneline hoş geldiniz.</p>
                <% } else { %>
                    <p class="text-gray-700">Merhaba, Anonim Kontrol paneline hoş geldiniz.</p>
                <% } %>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <a href="/admin/urunolustur" class="block">
                    <button class="w-full mb-2 bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition duration-200">Ürün Oluştur</button>
                </a>
                <a href="/admin/urunyonetim" class="block">
                    <button class="w-full mb-2 bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition duration-200">Ürün Paneli</button>
                </a>
                <a href="/admin/kuponlar" class="block">
                    <button class="w-full mb-2 bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition duration-200">Kupon Paneli</button>
                </a>
                <a href="/admin/kullaniciyonetim" class="block">
                    <button class="w-full mb-2 bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition duration-200">Kullanıcı Yetkileri</button>
                </a>
                <a href="/admin/kategoriyonetim" class="block">
                    <button class="w-full mb-2 bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition duration-200">Kategori Seçenekleri</button>
                </a>
                <a href="/admin/duyuruolustur" class="block">
