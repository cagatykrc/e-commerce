<%- include('./partials/header.ejs') %>
<%- include ('./partials/notificationpop.ejs') %>
<div class="a-s"></div>
<div class="lgncustom-container">
  <div class="loginPage">
    <form action="/auth/giris" method="post">
      <h2>Giriş Yap</h2>
      <div class="form-group">
        <label for="emailanduser">E-posta veya Kullanıcı Adı:</label>
        <input type="text" class="form-control" id="emailanduser" name="emailanduser" placeholder="E-postanızı veya Kullanıcı Adınızı Girin" required maxlength="36">
      </div>
      <div class="form-group">
        <label for="password">Şifre:</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required maxlength="24">
      </div>
      <br>
      <a style="color: #28c4d8" href="/auth/kayit">Bir hesabınız yok mu?</a>
      <button type="submit" class="loginBtn">Giriş Yap</button>
    </form>
  </div>
</div>

