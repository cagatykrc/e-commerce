                                        <i class="fa-solid fa-plus"></i>
                                    </div>
                                    <div id="category-area" class="shop-categories-area">
                                        <ul class="spec-ul">
                                        <% productType.kategoriler.forEach(kategori => { %>
                                            <li class="spec-li m-li"><a href="/urunler?kategoriID=<%=kategori.category_low%>"><%= kategori.kategori_ad %></a></li>
                                        <% }); %>
                                    </ul>
                                </div>
                            </div>
                            <% } %>
                        <% } %>
                        <script>
                        function toggleCategory(id) {
                            const element = document.getElementById(id);
                            if (element.style.display === "block") {
                                element.style.display = "none";
                            } else {
                                element.style.display = "block";
                            }
                        }
