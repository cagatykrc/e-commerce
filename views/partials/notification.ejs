<% if (notification) { %>
    <div id="toast" class="flex fixed z-50 right-0 top-5 lg:top-51 items-center w-full max-w-xs p-4 mb-4 text-white bg-<%= notification.type === 'success' ? 'lime-600' : notification.type === 'danger' ? 'red-600' : 'orange-600' %> rounded-lg shadow transition-transform transform -translate-x-full" role="alert">
        <div class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-white bg-<%= notification.type === 'success' ? 'lime-700' : notification.type === 'danger' ? 'red-700' : 'orange-700' %> rounded-lg">
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                <% if(notification.type === 'success') { %>
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>
                <% } else if(notification.type === 'danger') { %>
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z"/>
                <% } else if(notification.type === 'warning') { %>
                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/>
                <% } %>
            </svg>
            <span class="sr-only"><%= notification.type === 'success' ? 'Check icon' : notification.type === 'danger' ? 'Error icon' : 'Warning icon' %></span>
        </div>
        <div class="ms-3 text-sm font-normal"><%= notification.title %>.</div>
        <button type="button" class="ms-auto close-btn -mx-1.5 -my-1.5 bg-<%= notification.type === 'success' ? 'lime-600' : 'white' %> text-white hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8" aria-label="Close">
            <span class="sr-only">Close</span>
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
        </button>
    </div>
    <% } %>
<script>
    const toast = document.querySelector('#toast');
    const closeButton = document.getElementsByClassName('close-btn');

    // Function to hide the toast with animation
    function hideToast() {
        toast.classList.add('translate-x-full'); // Slide out
        setTimeout(() => {
            toast.style.display = 'none'; // Remove from view
        },); // Match this to the CSS transition duration
    }

    // Close button click event
    closeButton.addEventListener('click', hideToast);

    // Auto close after 5 seconds
    setTimeout(hideToast, 5000);

    // Slide in animation
    setTimeout(() => {
        toast.classList.remove('-translate-x-full'); // Slide in
    }, 100); // Delay slightly for the slide-in effect
</script>

<style>
    .transition-transform {
        transition: transform 0.5s ease-in-out;
    }
    .-translate-x-full {
        transform: translateX(0);
    }
</style>
