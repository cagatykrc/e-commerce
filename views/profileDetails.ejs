<%- include('./partials/header.ejs') %>
<%- include('./partials/loader.ejs') %>
<div class="profile-main main">
    <div class="profile-links">
        <ul class="profile-ul">
            <li class="profile-li"><a href="/profil/">Kişisel Bilgiler</a></li>
            <li class="profile-li"><a href="/profil/siparislerim">Siparişlerim</a></li>
            <li class="profile-li"><a href="/profil/adreslerim">Adreslerim</a></li>
            <form action="/auth/cikis" method="post">
                <li class="profile-li"><a href="/auth/cikis"><input class="danger-badge" type="submit" value="Çıkış Yap"></a></li>


            </form>
        </ul>
    </div>
    <div class="profile-container">
        <div class="profile-title">
            <h2>Kişisel Bilgiler</h2>
            <form action="" method="post">
                <div class="form-group">
                    <label for="first_name">Adınız</label>
                    <input class="form-control" name="first_name" type="text" value="<%=user.first_name%>">
                </div>
                <div class="form-group">
                    <label for="last_name">Soyadınız</label>
                    <input class="form-control" name="last_name" type="text" value="<%=user.last_name%>">
                </div>
                <div class="form-group">
                    <label for="email">Email Adresiniz</label>
                    <input class="form-control" name="email" type="text" value="<%=user.email%>">
                </div>
                <div class="form-group">
                    <label for="phone">Telefon Numaranız</label>
                    <input class="form-control" name="phone" type="text" value="<%=user.phone%>">
                </div>
                <input type="submit" class="btn" value="Değiştir">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
